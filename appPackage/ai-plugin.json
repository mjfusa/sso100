{
    "$schema": "https://developer.microsoft.com/json-schemas/copilot/plugin/v2.1/schema.json",
    "schema_version": "v2.1",
    "name_for_human": "Microsoft Graph API",
    "description_for_human": "API to obtain message center messages including OAuth authentication",
    "description_for_model": "API to obtain message center messages including OAuth authentication",
    "contact_email": "publisher-email@example.com",
    "namespace": "sso100",
    "capabilities": {
        "conversation_starters": [
            {
                "text": "Get message center messages"
            }
        ]
    },
    "functions": [
        {
            "name": "getMessages",
            "description": "Retrieve the message center messages",
            "capabilities": {
          "response_semantics": {
                    "data_path": "$.value",
                    "properties": {
                        "title": "$.title",
                        "subtitle": "$.id"
                    },
                    "static_template": {
                        "file": "adaptiveCards/getMessages.json"
                    }
                }
            }
        }
    ],
    "runtimes": [
        {
            "type": "OpenApi",
            "auth": {
                "type": "OAuthPluginVault",
                "reference_id": "${{OAUTH2_REGISTRATION_ID}}"
            },
            "spec": {
                "url": "apiSpecificationFile/openapi.json"
            },
            "run_for_functions": [
                "getMessages"
            ]
        }
    ]
}
